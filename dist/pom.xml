<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.erethon</groupId>
    <artifactId>commons</artifactId>
    <version>${project.parent.version}</version>
    <packaging>jar</packaging>
    <parent>
        <groupId>de.erethon</groupId>
        <artifactId>commons-parent</artifactId>
        <version>5.1.3</version>
    </parent>
    <build>
        <directory>../target</directory>
        <finalName>commons-${project.version}${buildNo}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>de.erethon:commons-*</include>
                                    <include>de.erethon:compatibility</include>
                                    <include>de.erethon:headlib</include>
                                    <include>net.md-5:bungeecord-chat</include>
                                    <include>org.bstats:bstats-bukkit</include>
                                    <include>org.inventivetalent.spiget-update</include>
                                </includes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>net.md-5:bungeecord-chat</artifact>
                                    <excludes>
                                        <exclude>mojang-translations/en_US.properties</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <relocations>
                                <relocation>
                                    <pattern>de.erethon.headlib</pattern>
                                    <shadedPattern>de.erethon.commons.headlib</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.md_5.bungee.*</pattern>
                                    <shadedPattern>de.erethon.commons.chat</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.md_5.bungee.api</pattern>
                                    <shadedPattern>de.erethon.commons.chat</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.md_5.bungee.chat</pattern>
                                    <shadedPattern>de.erethon.commons.chat</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.bstats.bukkit</pattern>
                                    <shadedPattern>de.erethon.commons.bstats</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.inventivetalent.update.spiget</pattern>
                                    <shadedPattern>de.erethon.commons.spiget</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_13_R2</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_13_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_12_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_11_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_10_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_9_R2</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_9_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_8_R3</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_8_R2</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>de.erethon</groupId>
            <artifactId>commons-craftbukkit_1_8_R1</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
    </dependencies>
</project>
